{
  "extends": "../tsconfig.base.json",
  "include": ["**/*.js", "**/*.mjs"],
  "exclude": ["**/*.spec.*", "**/node_modules", "moj/vendor"],
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "ES2015"
  }
}

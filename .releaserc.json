{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "main",
    "use-next-release-version"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["gulp/dist.js"],
            "from": "const { version } = '0.0.0-development'",
            "to": "const { version } = '${nextRelease.version}'",
            "results": [
              {
                "file": "gulp/dist.js",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "npm version --no-git-tag-version --allow-same-version --workspace package ${nextRelease.version}"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "package"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package/package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/release.zip",
            "name": "release-${nextRelease.gitTag}.zip"
          }
        ]
      }
    ]
  ]
}

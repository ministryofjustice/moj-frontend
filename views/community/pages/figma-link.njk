{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% extends "base.njk" %}
{% block content %}
  <div class="app-layout__content">
    {% if backLink %}
      {{ govukBackLink({
        text: "Back",
        href: backLink
      }) }}
    {% endif %}
    {% if errorList %}
      {{ govukErrorSummary({
        titleText: "There is a problem",
        errorList: errorList
      }) }}
    {% endif %}
    <form method="POST" action="{{ submitUrl }}" data-add-another-container>
      <span class="govuk-caption-l">Submit a new component</span>
      <h1 class="govuk-heading-xl">Figma design</h1>
      {{ govukInput({
        hint: {
          text: page.fields.figmaLink.hint
        },
        label: {
          text: page.fields.figmaLink.label,
          classes: "govuk-label--m"
        },
        id: "figma-link",
        name: "figmaLink",
        errorMessage: formErrors.figmaLink,
        value: formData.figmaLink,
        autocapitalize: false
      }) }}

      {{ govukCharacterCount({
        name: "figmaLinkAdditionalInformation",
        id: "figmaLink-additional-information",
        maxwords: 250,
        hint: {
          text: page.fields.figmaLinkAdditionalInformation.hint
        },
        label: {
          text: page.fields.figmaLinkAdditionalInformation.label,
          classes: "govuk-label--m"
        },
        errorMessage: formErrors.figmaLinkAdditionalInformation,
        value: formData.figmaLinkAdditionalInformation
      }) }}

      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

      <div class="govuk-button-group moj-button-action">
        {{ govukButton({
          text: 'Continue',
          preventDoubleClick: true
        }) }}
      </div>
    </form>
  </div>
{% endblock %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends "base.njk" %}
{% block content %}
  <div class="app-layout__content">
    <form method="post" action="{{ submitUrl }}">
      <span class="govuk-caption-l">Submit new component</span>
      <h1 class="govuk-heading-xl">Check your answers before submitting the component</h1>

      <h2 class="govuk-heading-l">Component details</h2>
      {{ govukSummaryList({
        rows: componentDetailsRows,
        classes: "govuk-!-margin-bottom-9"
      }) }}

      {% if addExternalAuditRows.length > 0 %}
        <h2 class="govuk-heading-l">External accessibility audit</h2>
        {{ govukSummaryList({
          rows: addExternalAuditRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      {% if addInternalAuditRows.length > 0 %}
        <h2 class="govuk-heading-l">Internal accessibility audit</h2>
        {{ govukSummaryList({
          rows: addInternalAuditRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      {% if addAssistiveTechRows.length > 0 %}
        <h2 class="govuk-heading-l">Testing with assistive technology</h2>
        {{ govukSummaryList({
          rows: addAssistiveTechRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      {% if prototypeRows.length > 0 %}
        <h2 class="govuk-heading-l">Prototype URL</h2>
        {{ govukSummaryList({
          rows: prototypeRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      {% if componentCodeRows.length > 0 %}
        <h2 class="govuk-heading-l">Component code</h2>
        {{ govukSummaryList({
          rows: componentCodeRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      {% if figmaRows.length > 0 %}
        <h2 class="govuk-heading-l">Figma designs</h2>
        {{ govukSummaryList({
          rows: figmaRows,
          classes: "govuk-!-margin-bottom-9"
        }) }}
      {% endif %}

      <h2 class="govuk-heading-l">Your details</h2>
      {{ govukSummaryList({
        rows: yourDetailsRows,
        classes: "govuk-!-margin-bottom-9"
      }) }}

      <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

      <div class="moj-button-action">
        {{ govukButton({
          text: 'Accept and send'
        }) }}
      </div>
    </form>
  </div>
{% endblock %}

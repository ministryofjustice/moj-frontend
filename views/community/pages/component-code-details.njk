{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% extends "contributions.njk" %}

{% block form %}
  {% call form({
    action: submitUrl,
    csrfToken: csrfToken
  }) %}

    <p class="govuk-body">You should only include code for this component. The code block should not contain any personally identifiable or sensitive information. You can add more than one code block.</p>

    {% set otherHtml %}
      {{ govukInput({
        id: "component-code-language-other",
        name: "componentCodeLanguageOther",
        errorMessage: formErrors.componentCodeLanguageOther,
        value: formData.componentCodeLanguageOther,
        type: "text",
        classes: "govuk-!-width-one-third",
        label: {
          text: page.fields.componentCodeLanguageOther.label
        }
      }) }}
    {% endset -%}

    {{ govukRadios({
      id: "component-code-language",
      name: "componentCodeLanguage",
      errorMessage: formErrors.componentCodeLanguage,
      value: formData.componentCodeLanguage,
      hint: {
        text: page.fields.componentCodeLanguage.hint
      },
      fieldset: {
        legend: {
          text: page.fields.componentCodeLanguage.label,
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      items: [
        {
          value: "html",
          text: "HTML"
        },
        {
          value: "nunjucks",
          text: "Nunjucks"
        },
        {
          value: "css",
          text: "CSS"
        },
        {
          value: "javascript",
          text: "JavaScript"
        },
        {
          value: "other",
          text: "Other",
          conditional: {
            html: otherHtml
          }
        }
      ]
    }) }}

    {{ govukCharacterCount({
      name: "componentCode",
      id: "component-code",
      maxlength: 10000,
      classes: 'font-monospace',
      rows: 30,
      label: {
        text: "Add the code",
        classes: "govuk-label--m"
      },
      errorMessage: formErrors.componentCode,
      value: formData.componentCode
    }) }}

    {{ govukCharacterCount({
      name: "componentCodeUsage",
      id: "component-code-usage",
      maxwords: 250,
      label: {
        text: page.fields.componentCodeUsage.label,
        classes: "govuk-label--m"
      },
      hint: {
        text: page.fields.componentCodeUsage.hint
      },
      errorMessage: formErcomponentCodeLanguages.componentCodeUsage,
      value: formData.componentCodeUsage
    }) }}

    <div class="govuk-button-group moj-button-action">
      {{ govukButton({
        text: 'Continue',
        preventDoubleClick: true
      }) }}
      {% if showAddAnother %}
        {{ govukButton({
          text: "Add another code block",
          classes: "govuk-button--secondary",
          name: "addAnother"
        }) }}
      {% endif %}
    </div>
  {% endcall %}
{% endblock %}

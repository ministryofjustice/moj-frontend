{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "contributions.njk" %}

{% block form %}
  {% call form({
    action: submitUrl,
    csrfToken: csrfToken
  }) %}

    <p class="govuk-body">You need to work for MoJ to submit a component to the Design System.</p>

    {{ govukInput({
      id: "email-address",
      name: "emailAddress",
      label: {
        text: page.fields.emailAddress.label,
        classes: "govuk-label--m"

      },
      hint: {
       text: page.fields.emailAddress.hint
      },
      errorMessage: formErrors.emailAddress,
      value: formData.emailAddress,
      formGroup: {
        classes: 'govuk-!-margin-top-0'
      }
    }) }}

    <p class="govuk-body">Youâ€™ll be sent an email with a confirmation link.</p>

    <div class="moj-button-action">
      {{ govukButton({
          text: 'Continue'
      }) }}
    </div>
  {% endcall %}
{% endblock %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "contributions.njk" %}

{% block form %}
  {% call form({
    action: submitUrl,
    csrfToken: csrfToken
  }) %}

    <p class="govuk-body">You should only send the component code and not the full page of code. This ensures itâ€™s easy for others to understand and use. The code should not contain any personally identifiable or sensitive information.</p>
    {{ govukRadios({
      name: "componentCodeAvailable",
      fieldset: {
        attributes: {
          id: "component-code-available"
        },
        legend: {
          text: page.fields.componentCodeAvailable.label,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: [
        {
          value: "yes",
          text: "Yes"
        },
        {
          value: "no",
          text: "No"
        }
      ],
      errorMessage: formErrors.componentCodeAvailable,
      value: formData.componentCodeAvailable
    }) }}

    <div class="govuk-button-group moj-button-action">
      {{ govukButton({
        text: 'Continue',
        preventDoubleClick: true
      }) }}
  {% endcall %}
{% endblock %}

{
  "name": "@ministryofjustice/frontend",
  "description": "The MOJ Frontend contains the code you need to start building user interfaces for UK Ministry of Justice government services.",
  "main": "index.js",
  "files": [
    "/package"
  ],
  "scripts": {
    "build:docs": "npm run build:package && webpack && eleventy --input=./docs --output=public",
    "build:dist": "gulp build:dist",
    "build:package": "gulp build:package",
    "ci:release": "HUSKY_SKIP_HOOKS=1 CI=true semantic-release --debug",
    "ci:dryrun": "HUSKY_SKIP_HOOKS=1 CI=true semantic-release --dry-run",
    "start": "npm-run-all --parallel watch:*",
    "test": "npm-run-all --parallel test:*",
    "test:sass": "npm install node-sass && node-sass -q test.scss >/dev/null && echo 'ok'",
    "test:docs": "npm run build:docs",
    "watch:11ty": "eleventy --input=./docs --output=public --serve --watch",
    "watch:webpack": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/moj-frontend.git"
  },
  "author": "MOJ Digital & Technology",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "private": false,
  "bugs": {
    "url": "https://github.com/ministryofjustice/moj-frontend/issues"
  },
  "homepage": "https://github.com/ministryofjustice/moj-frontend#readme",
  "dependencies": {
    "@11ty/eleventy": "^1.0.1",
    "clipboard": "^2.0.8",
    "del": "^5.1.0",
    "govuk-frontend": "^3.14.0",
    "gulp": "^4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^8.0.0",
    "gulp-umd": "^2.0.0",
    "moment": "^2.29.4",
    "nunjucks": "^3.2.3",
    "require-dir": "^1.2.0",
    "sass": "^1.50.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@ministryofjustice/frontend": "file:./package",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.0.0",
    "commitizen": "^4.2.5",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.13",
    "cz-conventional-changelog": "^3.3.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "highlight.js": "^10.7.2",
    "husky": "^4.3.8",
    "js-beautify": "^1.13.13",
    "markdown-it-anchor": "^7.1.0",
    "mini-css-extract-plugin": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "sass-loader": "^12.0.0",
    "semantic-release": "^19.0.3",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

{% extends "./base.njk" %}

{% from "macros/status.njk" import statusLabel %}
{% from "macros/heading/macro.njk" import heading %}

{% block content %}
    <div class="app-layout__content">
        {{ heading({
          text: title,
          caption: "Archive" if not isIndex,
          statusTag: { text: status }
        }) }}

        {{ statusLabel(type, status, statusInfo[status], statusDate, creatorName, creatorTeam) }}
        {{ content | safe }}
    </div>

{% endblock %}

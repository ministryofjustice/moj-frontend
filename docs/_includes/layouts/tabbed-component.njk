{% extends "./base.njk" %}
{% from "macros/status-label/macro.njk" import statusLabel %}
{% from "macros/heading/macro.njk" import heading %}
{% block content %}
    <div class="app-page__header">
        <div class="app-page__width-container">
                {{ heading({
                                text: title,
                                caption: "Components" if not isIndex,
                                statusTag: { text: status }
                                }) }}
                {{ statusLabel(type,
                                status,
                                statusInfo[status],
                                statusDate,
                                creatorName,
                                creatorTeam) if statusInfo[status] }}
        </div>
    </div>
    <div class="app-page__body">
        <div class="app-page__width-container">
            {{ content | safe }}
        </div>
    </div>
{% endblock %}

{% from "macros/status-label/macro.njk" import statusLabel %}
{% from "macros/heading/macro.njk" import heading %}
{% from "macros/heading/macro.njk" import heading %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set showLede = true %}
{% if status and ( status == "Archived" or status == "To be reviewed") %}
  {% set showLede = false %}
{% endif %}

<div class="app-page__header">
    <div class="app-page__width-container">
      {% if backLink %}
          {{ govukBackLink({
            text: "Back",
            href: backLink
          }) }}
      {% endif %}

      {{ heading({
        text: title,
        caption: subsection,
          statusTag: { text: status } if status
          }) }}

      {{ statusLabel({
        type: type,
        status: status,
        statusData: statusInfo[status],
        statusDate: statusDate,
        contributorName: contributorName,
        contributorTeam: contributorTeam
        }) if statusInfo[status] }}

      {% if showLede %}
        <span class="govuk-caption-xl govuk-!-margin-top-8">{{ lede | safe }}</span>
      {% endif %}
    </div>
</div>

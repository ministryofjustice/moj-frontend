{% extends "./base.njk" %}

{% from "macros/status.njk" import statusLabel %}
{% from "macros/heading/macro.njk" import heading %}

{% block content %}
    <div class="app-layout__content">
        {{ heading({
          text: title,
          caption: "Patterns" if not isIndex,
          statusTag: { text: status }
        }) }}

       {{ statusLabel(type, status, statusInfo, creatorName, creatorTeam, statusDate) }}
       {{ content | safe }}

      {% if isIndex or isArchive %}
      {% else %}
        {% include "./partials/get-help-and-contribute.njk" %}
      {% endif %}

    </div>

{% endblock %}
